{
  "name": "eslint-watch",
  "version": "2.1.11",
  "description": "Run eslint with watch mode",
  "main": "./src/cli.js",
  "scripts": {
    "eslint": "eslint ./",
    "lint": "node ./bin/esw",
    "lw": "node ./bin/esw -w",
    "test": "mocha spec --recursive -R spec --timeout 10000 --compilers js:babel-core/register",
    "tdd": "mocha -w spec --recursive -R spec",
    "ci": "npm run lint && npm run coverage",
    "ci-win": "npm run lint && npm test",
    "coverage": "istanbul cover _mocha -- --recursive spec -R spec --timeout 10000 --compilers js:babel-core/register",
    "build": "rm -rf build; babel src -d build -s inline",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizowski/eslint-watch.git"
  },
  "bin": {
    "esw": "./bin/esw"
  },
  "keywords": [
    "eslint",
    "plugin",
    "command line tool",
    "cli",
    "watch",
    "lint",
    "linting",
    "javascript",
    "linter"
  ],
  "author": {
    "name": "Colten Rouska",
    "email": "c.rouska@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rizowski/eslint-watch/issues"
  },
  "homepage": "https://github.com/rizowski/eslint-watch",
  "peerDependencies": {
    "eslint": ">=0.19.0 <3.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bluebird": "^3.4.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.4.3",
    "debug": "^2.2.0",
    "keypress": "^0.2.1",
    "lodash": "^4.11.2",
    "optionator": "^0.8.1",
    "source-map-support": "^0.4.0",
    "text-table": "^0.2.0",
    "unicons": "0.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-async-to-bluebird": "^1.1.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-preset-stage-3": "^6.5.0",
    "chai": "^3.4.0",
    "eslint": "2",
    "istanbul": "^0.4.3",
    "mocha": "^2.2.5",
    "mocha-sinon": "^1.1.4",
    "proxyquire": "^1.6.0",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.7.0",
    "sinon-promise": "^0.1.3"
  }
}
